import java.util.*;
class encapsule{
    private String name;
    private String roll;
    private long phone;
    
    public void setValue(String name, String roll , long phone){
        this.name=name;
        this.roll=roll;
        this.phone=phone;
    }
    public void getValue(){
        System.out.println("Name : "+name);
        System.out.println("Roll no : "+roll);
        System.out.println("Phone No : "+phone);
    }
}
public class Main
{
	public static void main(String[] args) {
	    encapsule e = new encapsule();
	    e.setValue("Muthukumar","927622BAL028",6300802);
	   e.getValue();
	}
}
